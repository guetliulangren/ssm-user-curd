<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgm.dao.UserMapper">


<resultMap id="usermapper" type="com.lgm.bean.User">
     <id property="id" column="id"/>
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
   
  </resultMap>
<!-- sql的id必须与方法名相同 -->
<select id="find"   resultMap="usermapper">

    select name,password from user  where name=#{name} and password=#{password}

</select>
<delete id="delect"   resultMap="usermapper">

DELETE FROM user where  id=#{id}

</delete>
<insert id="insert"  resultMap="usermapper">

  insert into user (name,password)  values  (#{name},#{password})
</insert>
<update id="update"   resultMap="usermapper">

   update  user  set  name=#{name},password=#{password}  where id=#{id}

</update>

</mapper>